%tr{ class: 'abstractor-object-value-variant', data: { controller: 'abstractor-object-value-variants', target: 'abstractor-object-value-variants.abstractorObjectValueVariant' } }
  %td.value
    = f.hidden_field :id, data: { target: 'abstractor-object-value-variants.id' }
    = f.hidden_field :_destroy, data: { target: 'abstractor-object-value-variants.destroy' }
    .input-field
      = f.text_field :value, class: 'autocomplete', autocomplete: 'off', disabled: f.object.used?
    - if validation_errors?(f.object, :value)
      %p.error= format_validation_errors(f.object, :value)
  %td.case_sensitive
    %label
      = f.check_box :case_sensitive, disabled: f.object.used?, data: { target: 'abstractor-object-value-variants.case_sensitive' }
      %span
        Case Sensitive?
  %td.remove.right-align
    = link_to 'Delete', '', class: 'btn wave-effect waves-light red remove-abstractor-object-value-variant', data: { action: 'click->abstractor-object-value-variants#delete' }
